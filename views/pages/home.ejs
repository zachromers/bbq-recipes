<!-- Featured Recipes -->
<% if (featuredRecipes && featuredRecipes.length > 0) { %>
<section class="section featured-section">
    <h2 class="section-title">Featured Recipes</h2>
    <div class="recipe-grid">
        <% featuredRecipes.forEach(recipe => { %>
            <%- include('../partials/recipe-card', { recipe }) %>
        <% }) %>
    </div>
</section>
<% } %>

<!-- Recent Recipes -->
<% if (recentRecipes && recentRecipes.length > 0) { %>
<section class="section recent-section">
    <h2 class="section-title">Latest Recipes</h2>
    <div class="recipe-grid">
        <% recentRecipes.forEach(recipe => { %>
            <%- include('../partials/recipe-card', { recipe }) %>
        <% }) %>
    </div>
    <div class="section-cta">
        <a href="/recipes" class="btn btn-secondary">View All Recipes</a>
    </div>
</section>
<% } %>

