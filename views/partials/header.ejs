        <!-- Navigation -->
        <nav class="main-nav" aria-label="Main navigation">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="/" class="nav-link <%= currentPath === '/' ? 'active' : '' %>">Home</a>
                </li>
                <li class="nav-item has-dropdown">
                    <a href="/recipes" class="nav-link <%= currentPath.startsWith('/recipes') ? 'active' : '' %>">
